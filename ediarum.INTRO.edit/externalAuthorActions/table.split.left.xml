  <a:operations>
    <a:operation id="ro.sync.ecss.extensions.tei.table.SplitLeftRightOperation">
      <a:xpathCondition>ancestor-or-self::*:cell[namespace-uri()='http://www.tei-c.org/ns/1.0']</a:xpathCondition>
      <a:arguments>
        <a:argument name="Split point">Left</a:argument>
